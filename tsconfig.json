{
  "compilerOptions": {
    // Compiler options.
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,

    // Check options.
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["out/**/*"]
}
